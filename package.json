{
  "name": "pomodoro",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Piotr Ma≈Çecki-Jurek <piotr.m.jurek@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "poi --require ts-node/register --config poi.config.ts",
    "test:unit": "jest --watch --no-cache",
    "pretty": "prettier --write --config .prettierrc -l ./src/*{ts,tsx}"
  },
  "dependencies": {
    "@types/react-redux": "^5.0.19",
    "@types/redux": "^3.6.0",
    "firebase": "^4.13.1",
    "material-ui": "^1.0.0-beta.37",
    "material-ui-icons": "^1.0.0-beta.36",
    "poi-preset-react": "^9.2.1",
    "poi-preset-typescript": "^9.0.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.0",
    "@types/material-ui": "^0.21.1",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.4.2",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.7.2",
    "poi": "^9.6.13",
    "prettier": "1.12.1",
    "sass-loader": "^6.0.7",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx)"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.ts"
    ],
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1",
      "\\.(scss|css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty"
    }
  }
}
